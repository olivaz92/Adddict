{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Mail</th>
                <th>Photo</th>
                <th>Role</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.mail }}</td>
                <td><img src="{{asset('uploads/photo/'~user.photo )}}" alt="" width="100 px" height="100px" ></td>
                <td>
                    {% for role in user.roles %}
                        <li>{{ role }}</li>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
